{
    "compilerOptions": {
        "baseUrl": ".",
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declarationMap": true,
        "declarationDir": ".",
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "es5",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
          ],
        "paths": {
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "spec"
    ]
}