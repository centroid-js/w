{
    "compilerOptions": {
        "baseUrl": ".",
        "skipLibCheck": true,
        "declaration": true,
        "target": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "paths": {
            "@centroidjs/web/router": [
                "../router/src/index"
            ],
            "@centroidjs/web/platform-server": [
                "src/index"
            ],
            "@centroidjs/web": [
                "../src/index"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
