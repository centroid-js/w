{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "paths": {
      "@centroidjs/core": [
          "../core/src/index"
      ],
      "@centroidjs/web/router": [
        "router/src/index"
      ],
      "@centroidjs/web/platform-server": [
        "platform-server/src/index"
      ],
      "@centroidjs/web": [
        "src/index"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ]
}
