{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "paths": {
      "@centroid.js/w/core": [ "core/src/index" ],
      "@centroid.js/w/platform-server": [ "platform-server/src/index" ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
