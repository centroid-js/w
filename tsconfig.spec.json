{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "paths": {
      "@centroid.js/w/core": [ "core/src/index" ],
      "@centroid.js/w/platform-server": [ "platform-server/src/index" ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
